<p>
  <strong>Image:</strong>
  <%= image_tag(@productinfo.image_url.to_s, width: "15%") %>
</p>

<p>
  <strong>Productname:</strong>
  <%= @productinfo.productname %>
</p>

<p>
  <strong>Storeproductid:</strong>
  <%= @productinfo.storeproductid %>
</p>

<p>
  <strong>Productprice:</strong>
  <%= @productinfo.productprice %>
</p>

<p>
  <strong>Storename:</strong>
  <%= Branchinfo.find(@productinfo.branchinfo_id).branchname %>
</p>

<%= link_to'Edit', {:controller => "productinfos", :action => "edit",
                    :productinfo_id => @productinfo.id} %>
<% branchid = @productinfo.branchinfo_id %>
<% storeid = Branchinfo.find(branchid).storeinfo_id %>
<% storename = Storeinfo.find(storeid).storename %>
<% if storename.downcase.include? "tesco" %>
  | <%= link_to 'Find store', check_path %>
<% end %>


