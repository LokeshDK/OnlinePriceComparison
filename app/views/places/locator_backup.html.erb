
<h2>Below are the Tesco stores near you!</h2>
<%= form_tag "/details" do %>


<table>
  <thead>
  <tr>
    <th>Branch name</th>
    <th>Contact number</th>
    <th>Address</th>
    <th>Distance</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @stores.each_with_index do |item, i| %>
    <tr>
      <td><%= item["name"] %></td>
      <td><%= item["phone"] %></td>
      <td><%= item["door_number"] %>, <%= item["address"]  %>, <%= item["town"]  %>, <%= item["postcode"]  %>  </td>
      <td><%= item["distance"]  %> miles </td>
      <td><%= link_to 'Show Details', details_path(item), :method => :post %> </td>

    </tr>

  <% end %>
  </tbody>
</table>


<% end %>

<td><%= link_to 'Back', check_path %></td>